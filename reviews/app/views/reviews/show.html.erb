<div class="show page">
    <h1>See Reviews Here</h1>
	<div class="show-card" >
		<div class="structure-1" >
			<div class="show-image" >
				<%= image_tag @yelp_review_info["image_url"], size: "250" %>
			</div>
			<div class="show-text-box" >
 				<div class="show-sub-text-box show-business-info" >
					<div class="show-title-box left" >
						<div class="show-sub-item" >
							<%= content_tag :h1, @yelp_review_info["name"] %>
						</div>
						<div class="show-sub-item" >
							<%= content_tag :p, @yelp_review_info["categories"][0]["alias"] %>
						</div>
						<div class="show-sub-item">	
		        				<% if @avg_user_rating < 0.5%>
                               	    				<%= content_tag :p, "No Price Information" %>
                               				<% elsif @avg_user_rating < 1.5%>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               				<% elsif @avg_user_rating < 2.5%>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               				<% elsif @avg_user_rating < 3.5%>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               				<% elsif @avg_user_rating < 4.5%>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	 			   	<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	 			   	<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                              				<% elsif @avg_user_rating > 4.5%>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               	    				<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               					<%= image_tag("dollar-sign_grey.svg", size: "20") %>
                               				<% end %>
						Info     		 		
						</div> 
						<div class="break"></div>
						<div class="sub-item address">
                               				<%= content_tag :div, @yelp_review_info["location"]["display_address"] %>                           			</div>
						</div>
					<div class="show-title-box right" >
						Info
					</div>
					</div>
				<div class="show-sub-text-box show-aggie-reviews" >
					Aggie Reviews pulled from database
				</div>
				</div>
			</div>
		<div class="structure-2" >
			Aggie Reviews Portion
		</div>
                <div class="structure-3" >
			Tags
                </div>   
	</div>

