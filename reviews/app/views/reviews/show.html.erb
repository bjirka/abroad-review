                                                        <%= "CLOSED" %>
                                                <% else %>
							<%= @hours_open[3] %>
                                                	<%= "-" %>
                                                	<%= @hours_closed[3] %>
                                        	<% end %>
					</div>
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Friday" %>
                                                <% if (@hours_open == NULL || @hours_closed == NULL) %>
                                                        <%= "CLOSED" %>
                                                <% else %>
							<%= @hours_open[4] %>
                                                	<%= "-" %>
                                                	<%= @hours_closed[4] %>
                                        	<% end %>
					</div>
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Saturday" %>
                                                <% if (@hours_open == NULL || @hours_closed == NULL) %>
                                                        <%= "CLOSED" %>
                                                <% else %>
							<%= @hours_open[5] %>
                                         	        <%= "-" %>
                                                	<%= @hours_closed[5] %>
						<% end %>                                        
					</div>
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Sunday" %>
                                                <% if (@hours_open == NULL || @hours_closed == NULL) %>
                                                        <%= "CLOSED" %>
                                                <% else %>
							<%= @hours_open[6] %>
                                                	<%= "-" %>
                                                	<%= @hours_closed[6] %>
                                        	<% end %>	
					</div>
					<div class="show-sub-item s1-center" >
						<%= content_tag :h2, "Contact:" %>
						<%= content_tag :h2, @yelp_review_info["display_phone"] %>
					</div>
				</div>
				</div>
			</div>

		<div class="structure-2" >
			<h2>Aggie Reviews Portion</h2>
		</div>
                <div class="structure-3" >
			
                            <div class="sub-item">
                                <%= image_tag("gigs_maroon.svg", size: "20") %>
                                <%= content_tag :p, "Cash Only" %>
                            </div>
                        
                        
                            <div class="sub-item">
                                <%= image_tag("circle-check_maroon.svg", size: "20") %>
                                <%= content_tag :p, "Speaks English" %>
                            </div>
                       
                            <div class="sub-item">
                                <%= image_tag("dollar-sign_maroon.svg", size: "20") %>
                                <%= content_tag :p, "Tips Encouraged" %>
                            </div>
                      
                            <div class="sub-item">
                                <%= image_tag("wifi_maroon.svg", size: "20") %>
                                <%= content_tag :p, "WiFi" %>
                            </div>

                            <div class="sub-item">
                                <%= image_tag("wheelchair_maroon.svg", size: "20") %>
                                <%= content_tag :p, "Wheelchair Accessible" %>
			    </div>
                </div>   
	</div>

