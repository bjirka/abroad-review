                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_grey.svg", size: "20") %>
                                    					<%= image_tag("gigs_grey.svg", size: "20") %>
                                    					<%= image_tag("gigs_grey.svg", size: "20") %>
                                				<% elsif @avg_user_rating < 3.5%>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_grey.svg", size: "20") %>
                                    					<%= image_tag("gigs_grey.svg", size: "20") %>
                                				<% elsif @avg_user_rating < 4.5%>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_grey.svg", size: "20") %>
                                				<% elsif @avg_user_rating > 4.5%>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                    					<%= image_tag("gigs_maroon.svg", size: "20") %>
                                				<% end %>
								Rating Here
							</div>
							<div class="show-button" >
								<div id="leave_review">
        							        <button type="button" class="btn btn-default btn-lg">
        							        <%= link_to 'Leave A Review', controller: "reviews", action: "leave_review", id: params[:id] %>
        							</div>
							</div>
						</div>
					</div>
				</div>
				<div class="show-sub-text-box address" %>
					<%= @yelp_review_info["location"]["display_address"] %>
					
				</div>
				<div class="show-sub-text-box show-business-hours" >
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Monday" %>
						<% if (@hours_open == NULL || @hours_closed == NULL) %>
							<%= "CLOSED" %>
						<% else %>
							<%= @hours_open[0] %>
        	                                        <%= "-" %>
                	                                <%= @hours_closed[0] %>
						<% end %>	
					</div>
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Tuesday" %>
                                                <% if (@hours_open == NULL || @hours_closed == NULL) %>
							<%= "CLOSED" %>
						<% else %>
							<%= @hours_open[1] %>
							<%= "-" %>
							<%= @hours_closed[1] %> 
                                        	<% end %>
					</div>
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Wednesday" %>
                                        	<% if (@hours_open == NULL || @hours_closed == NULL) %>
                                                        <%= "CLOSED" %>
                                                <% else %>
							<%= @hours_open[2] %>
                                                	<%= "-" %>
                                                	<%= @hours_closed[2] %>
                                        	<% end %>
					</div>
					<div class="show-sub-item s1-left" >
						<%= content_tag :h2, "Thursday" %>
